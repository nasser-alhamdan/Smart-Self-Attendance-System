<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.activities.home.ui.sections.lecture.LecturesActivity">


    <com.google.android.material.tabs.TabLayout
        android:id="@+id/subjects_tab"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/all_lectures" />

        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/subject_students" />

    </com.google.android.material.tabs.TabLayout>


    <FrameLayout
        android:id="@+id/subject_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/subjects_tab" />


</RelativeLayout>