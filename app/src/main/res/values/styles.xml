<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="InputTextTheme" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:gravity">start</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:textColor">@color/purple_500</item>
        <item name="android:textColorHint">@color/purple_700</item>
    </style>

    <!-- goes up when keyboard is open -->
    <style name="floatingBottomSheetDialog" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
    </style>
</resources>